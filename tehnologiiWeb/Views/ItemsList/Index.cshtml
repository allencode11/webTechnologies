
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />

<h1>View</h1>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-dark">Items List </h2>
    </div>
    <div class="col-6 text-center">
        <a class="btn btn-dark" style="color: beige" asp-controller="ItemsList" asp-action="Create">&nbsp; Create New Item</a>
    </div>
</div>

<br />
<div class="border container" style="padding: 30px;">
    <table id="tblData" class="table table-striped table-bordered col-6">
        <thead class="thead-dark">
            <tr class="table table-dark">
                <th class="col-md-4 text-center" >Product</th>
                <th class="col-md-2 text-center">Image</th>
                <th class="col-md-3"></th>
            </tr>
        </thead>

        @foreach (var item in ViewBag.items)
        {
        <tr>
            <td>
                <h5>Title:@item.Name</h5>
                <h5>Category: @item.Category</h5>
                <h5>Price: @item.Price</h5>
                <h5>Owner: @item.Owner</h5>
            <td><img style="width: 20%; height: auto" src= @item.StringUrl/></td>
            <td>
                <a class="btn btn-dark" style="color: beige" asp-controller="ItemsList" asp-action="Create">&nbsp; Update</a>
                <a class="btn btn-primary" style="color: beige" asp-controller="ItemsList" asp-action="Delete">&nbsp; Delete</a>
            </td>

        </tr>
        }
    </table>
</div>
